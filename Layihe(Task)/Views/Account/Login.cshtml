@using Layihe_Task_.ViewModels.User
@{
    ViewData["Title"] = "Login";
}
@model UserLoginVM

<div class="container" style="margin-top:30px;margin-bottom:30px;">
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>UserName</label>
                <input asp-for="UserName" class="form-control" placeholder="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Password</label>
                <input asp-for="Password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input asp-for="IsParsistance" class="form-check-input">
                <label asp-for="IsParsistance" class="form-check-label">Remember me</label>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <a asp-controller="Account" asp-action="Register">Go</a>
        <button type="submit" class="btn btn-primary">Sign In</button>
    </form>
</div>


