@using Layihe_Task_.ViewModels.User
@{
    ViewData["Title"] = "Register";
}
@model UserRegisterVM
<div class="container" style="margin-top:30px;margin-bottom:30px;">
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Name</label>
                <input asp-for="FirstName" class="form-control" placeholder="FirstName">
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Surname</label>
                <input asp-for="LastName" class="form-control" placeholder="LastName">
                <span asp-validation-for="LastName" class="Text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>UserName</label>
                <input asp-for="UserName" class="form-control" placeholder="UserName">
                <span asp-validation-for="UserName" class="Text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Email</label>
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="Text-danger"></span>
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Password</label>
                <input asp-for="Password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label>Comfirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <a asp-controller="Account" asp-action="Login">Go to Login</a>
        <button type="submit" class="btn btn-primary">Register now</button>
    </form>
</div>

